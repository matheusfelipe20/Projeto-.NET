@model ProjetoFinal.Models.Manutencao

@{
    ViewData["Title"] = "Edit";
}
<body style="font-family:Verdana">
    <h1 style="font-size: 50px">Editar Veículo</h1>
    <hr />
    <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="PlacaVeiculo" class="control-label"></label>
                        <input asp-for="PlacaVeiculo" class="form-control" />
                        <span asp-validation-for="PlacaVeiculo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="QuantidadeKm" class="control-label"></label>
                        <input asp-for="QuantidadeKm" class="form-control" />
                        <span asp-validation-for="QuantidadeKm" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Registro" class="control-label"></label>
                        <input asp-for="Registro" class="form-control" />
                        <span asp-validation-for="Registro" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Agenda" class="control-label"></label>
                        <input asp-for="Agenda" class="form-control" />
                        <span asp-validation-for="Agenda" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-success w-100" />
                    </div>
                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-danger w-100">Voltar</a>
                    </div>
                </form>
            </div>
    </div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
</body>