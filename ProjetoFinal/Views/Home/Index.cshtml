@{
    ViewData["Title"] = "Home Page";
}
<body style="background-image:url(imagem/principal.jpg) ; background-repeat: no-repeat; background-attachment: fixed; background-size: 100%; background-size:cover">
    <br />
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block; w-100 " src="~/imagem/pagina1.jpg" alt="Primeiro Slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Gestão de Veículos</h5>
                    <p>Cadastre seus veículos para facilitar no gerenciamento da frota</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/imagem/pagina2.jpg" alt="Segundo Slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Agenda de Manutenção</h5>
                    <p>Mantenha-se sempre informado das datas de manuntenção dos veículos</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/imagem/pagina3.jpg" alt="Terceiro Slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Registro de Manutenção</h5>
                    <p>Controle as informações de manutenção do veículo mais facilmente</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Anterior</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Próximo</span>
        </a>
    </div>
    <header class="text-center text-while d-flex masthead" style="font-family:Verdana">
        <div class="container my-auto">
            <div class="row">
                <div class="col-xl-auto mx-auto">
                    <h1 class="text-center text-uppercase text-white" style="font-size: 55px">
                        <br />
                        <strong>Frota de Veículos</strong>
                    </h1>
                    <h2 style=" margin: 0 auto; max-width: 50px; border-width: 3px; border-style: solid; border-color: #FFFFFF; margin-bottom: 30px; margin-top: 30px">
                    </h2>
                </div>
            </div>
            <div class="col-xl-auto mx-auto text-white" style=" font-size: 22px ">
                <p class="text-center text-faded mb-5">Nós somos responsáveis por facilitar o gerenciamento e o controle dos seus veículos.</p>
            </div>
        </div>
    </header>
    <br/>
    <section id="contato">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 text-center mx-auto text-white">
                    <h1>Contatos</h1>
                    <h2 style=" margin: 0 auto; max-width: 30px; border-width: 2px; border-style: solid; border-color: #FFFFFF; margin-bottom: 15px; margin-top: 15px"></h2>
                    <hr class="my-4" />
                    <p>
                        <h3 class="mb-5 text-white">
                            Em caso de dúvida entre em contato conosco.
                        </h3>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 text-center ml-auto text-white">
                    <h1>Telefone</h1>
                    <p>(xx)xxxxx-xxxx</p>
                </div>
                <div class="col-lg-4 text-center mr-auto text-white">
                    <h1>Email</h1>
                    <p>email@examplo.com</p>
                </div>
            </div>
        </div>
    </section>
</body>