@model IEnumerable<ProjetoFinal.Models.Manutencao>
    <body style="background-image:url(imagem/principal.jpg) ; background-repeat: no-repeat; background-attachment: fixed; background-size: 100%; background-size:cover; font-family:Verdana">
        <div class="container p-5">
            <div class="row pt-4">
                <div class="col-6">
                    <h2 class="text-white">Gerenciador de Manutenções</h2>
                </div>
            </div>
            <br />
            <p>
                <a asp-action="Create" class="btn btn-primary">Cadastrar manutenção</a>
            </p>
            <h2 class="text-white" style="font-size: 18px;">
                Atenção! É recomendado agendar uma manutenção a cada 80.000 km percorrido. 
            </h2>


            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.PlacaVeiculo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.QuantidadeKm)
                        </th>
                        <th>
                            @Html.ActionLink("Agenda", "Index", new { sortOrder = ViewBag.AgendaParm })
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PlacaVeiculo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.QuantidadeKm) km
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Agenda)
                        </td>
                        <td>
                            <div class=" w-100 btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn-warning mx-1">Editar</a> |
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn-info mx-1">Registros</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn-danger mx-1">Deletar</a>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </body>